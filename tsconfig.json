{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": false,
    "checkJs": false,
    //    "pretty": true,
    "outDir": "lib",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "docs",
    "node_modules",
    "**/__fixtures__/*",
    "**/__tests__/*"
  ]
}
